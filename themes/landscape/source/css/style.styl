@import "nib"
@import "_variables"
@import "_util/mixin"
@import "_util/grid"
@import url("http://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800");

global-reset()

input, button
  margin: 0
  padding: 0
  &::-moz-focus-inner
    border: 0
    padding: 0

html, body, #container
  margin: 0 auto
  max-width: 1150px

body
  background: color-background
  font: font-size font-sans
  color: font-color

a 
  color: font-color

a:visited
  color: font-color
  
h3 
  color: #EC7263;
  font-size: 1.8em;
  font-weight: 700;
  text-transform: uppercase;

h3:before
  content: '//';
  margin-right: 5px;

.outer
  clearfix()
  max-width: (column-width + gutter-width) * columns + gutter-width
  padding-top: 2rem
  padding: 0 gutter-width
  background: #fff

.inner
  column(columns)

.left, .alignleft
  float: left

.right, .alignright
  float: right

.clear
  clear: both

#container
  position: relative

.mobile-nav-on
  overflow: hidden

#wrap
  height: 100%
  width: 100%
  position: absolute
  top: 0
  left: 0
  transition: 0.2s ease-out
  z-index: 1
  background: color-background
  .mobile-nav-on &
    left: mobile-nav-width

if sidebar and sidebar isnt bottom
  #main
    @media mq-normal
      column(main-column)

if sidebar is left
  @media mq-normal
    #main
      float: right

@import "_extend"
@import "_partial/header"
@import "_partial/article"
@import "_partial/comment"
@import "_partial/archive"
@import "_partial/footer"
@import "_partial/highlight"
@import "_partial/mobile"

if sidebar
  @import "_partial/sidebar"